# Example Terraform variables file
# Copy this to terraform.tfvars and customize

aws_region = "us-east-1"
environment = "prod"
project_name = "financial-news"

# CloudWatch schedule for news ingestion
# Examples:
#   "rate(5 minutes)"
#   "rate(1 hour)"
#   "cron(0 9 * * ? *)"  # Daily at 9 AM UTC
news_ingestion_schedule = "rate(5 minutes)"

# Bedrock model ID
bedrock_model_id = "anthropic.claude-3-sonnet-20240229-v1:0"

# Lambda runtime
lambda_runtime = "python3.11"

# Lambda default settings
lambda_timeout = 300  # seconds
lambda_memory_size = 512  # MB

# Bedrock analysis Lambda specific settings
bedrock_analysis_timeout = 900  # seconds
bedrock_analysis_memory = 2048  # MB

# DynamoDB billing mode
dynamodb_billing_mode = "PAY_PER_REQUEST"  # or "PROVISIONED"

